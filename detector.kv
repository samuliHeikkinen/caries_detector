#:kivy 1.1.0

Detector:

<Detector>:
    spacing: 10
    padding: 10
    orientation: 'vertical'
    chosenFolder: textInput
    image: img
    Button:
        size_hint_y: None
        height: 30
        text: 'Select Image'
        on_release: root.show_img_load()
    Image:
        id: img
    TextInput:
        size_hint_y: None
        height: 100
        id: textInput
        text: ''



<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        FileChooserListView:
            id: filechooser
            dirselect: True

        BoxLayout:
            spacing: 5
            size_hint_y: 0.075

            Button:
                text: "Select"
                on_release: root.load(filechooser.selection)

            Button:
                text: "Cancel"
                on_release: root.cancel()

<ImgDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        FileChooserListView:
            id: filechooser
            dirselect: True

        BoxLayout:
            spacing: 5
            size_hint_y: 0.075

            Button:
                text: "Select"
                on_release: root.load(filechooser.selection)

            Button:
                text: "Cancel"
                on_release: root.cancel()